<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lijianchnag.birthdayapp.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/timebg" />
    <ImageView
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/activity_main_iv_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/timg_stop" />


    <LinearLayout
        android:id="@+id/activity_main_layout"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:clipChildren="false"
        android:orientation="vertical">

        <lijianchnag.birthdayapp.view.alphaviewpager.ClipViewPager

            android:id="@+id/activity_mian_viewpager"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:overScrollMode="never">
        </lijianchnag.birthdayapp.view.alphaviewpager.ClipViewPager>

    </LinearLayout>
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/activity_main_iv_gif"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        />
</RelativeLayout>
